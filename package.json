{
  "name": "mtask",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "engines": {
    "node": "^22.18.0"
  },
  "scripts": {
    "build": "node build.mjs",
    "dev:build": "nodemon --watch src --ext \"*\" --exec \"yarn build\"",
    "dev:start": "nodemon --watch dist --ext \"*\" --exec \"yarn start\"",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Build,Start\" \"yarn dev:build\" \"yarn dev:start\"",
    "lint": "eslint .",
    "start": "electron-forge start",
    "build:icons": "electron-icon-builder --flatten --input=./check-mark-button.png --output=.",
    "package": "NODE_ENV=production yarn build && yarn build:icons && electron-forge package",
    "make": "electron-forge make",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "./dist/main.js",
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.0",
    "@electron-forge/maker-zip": "^7.10.0",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-links": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "electron": "^38.2.2",
    "electron-icon-builder": "^2.0.1",
    "esbuild": "^0.18.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "storybook": "^9.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "polished": "^4.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.64.0",
    "source-map-support": "^0.5.21",
    "styled-components": "6.1.19",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "mtask",
        "executableName": "mtask",
        "icon": "./icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ]
    }
  },
  "resolutions": {
    "@storybook/builder-manager/esbuild": "0.18.13"
  },
  "packageManager": "yarn@4.10.3"
}

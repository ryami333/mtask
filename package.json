{
  "name": "mtask",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "engines": {
    "node": "^18.16.0"
  },
  "scripts": {
    "build": "node build.js",
    "dev:build": "nodemon --watch src --ext \"*\" --exec \"yarn build\"",
    "dev:start": "nodemon --watch dist --ext \"*\" --exec \"yarn start\"",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Build,Start\" \"yarn dev:build\" \"yarn dev:start\"",
    "lint": "eslint .",
    "start": "electron-forge start",
    "build:icons": "electron-icon-builder --flatten --input=./check-mark-button.png --output=.",
    "package": "NODE_ENV=production yarn build && yarn build:icons && electron-forge package",
    "make": "electron-forge make",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "./dist/main.js",
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@storybook/addon-essentials": "^7.0.27",
    "@storybook/addon-interactions": "^7.0.27",
    "@storybook/addon-links": "^7.0.27",
    "@storybook/blocks": "^7.0.27",
    "@storybook/builder-manager": "^7.0.27",
    "@storybook/react": "^7.0.27",
    "@storybook/react-webpack5": "^7.0.27",
    "@types/ms": "^0.7.31",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "electron": "^25.3.0",
    "electron-icon-builder": "^2.0.1",
    "esbuild": "^0.18.13",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "storybook": "^7.0.27",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.1",
    "@types/uuid": "^9.0.2",
    "ms": "^2.1.3",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.1",
    "source-map-support": "^0.5.21",
    "styled-components": "5",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "mtask",
        "executableName": "mtask",
        "icon": "./icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ]
    }
  },
  "resolutions": {
    "@storybook/builder-manager/esbuild": "0.18.13"
  }
}
